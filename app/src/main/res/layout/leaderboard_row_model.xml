<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_leaderboard_rank"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="1"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/list_leaderboard_investor"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/list_leaderboard_rank"
        android:text="Investor"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/list_leaderboard_networth"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/list_leaderboard_investor"
        android:text="Net Worth"
        android:gravity="center"
        android:textSize="20sp"/>



</RelativeLayout>