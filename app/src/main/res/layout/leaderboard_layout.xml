<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <TextView
        android:text="Filter By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/filter_text"
        android:textSize="20sp"
        android:layout_alignTop="@+id/filter_top_investor"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Top Investor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/filter_text"
        android:id="@+id/filter_top_investor"
        android:textSize="12sp"
        android:width="50dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:text="My Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/filter_top_investor"
        android:id="@+id/filter_my_friends"
        android:textSize="12sp"
        android:width="50dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/leaderboard_rank"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Rank"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/leaderboard_investor"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/leaderboard_rank"
        android:layout_marginTop="80dp"
        android:text="Investor"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/leaderboard_networth"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/leaderboard_investor"
        android:layout_marginTop="80dp"
        android:text="Net Worth"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <ListView
        android:id="@+id/leaderboardListView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/leaderboard_rank" >
    </ListView>

</RelativeLayout>
